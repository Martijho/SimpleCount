<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent black background -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <stroke android:width="5dp" android:color="#FFFFFF" /> <!-- White border -->
        </shape>
    </item>

    <!-- Progress -->
    <item>
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FEC15E" /> <!-- Purple progress color -->
                <corners android:radius="20dp" /> <!-- Same rounded corners -->
                <stroke android:width="5dp" android:color="#FFFFFF" /> <!-- White border -->
            </shape>
        </clip>
    </item>
</layer-list>
